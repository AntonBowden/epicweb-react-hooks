{
  "name": "react-hooks",
  "private": true,
  "epicshop": {
    "title": "React Hooks ðŸŽ£",
    "githubRoot": "https://github.com/epicweb-dev/react-hooks/blob/main"
  },
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "postinstall": "cd ./epicshop && npm install",
    "start": "npx --prefix ./epicshop epicshop start",
    "dev": "npx --prefix ./epicshop epicshop start",
    "setup": "node ./epicshop/setup.js",
    "setup:custom": "node ./epicshop/setup-custom.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "dependencies": {
    "vanilla-tilt": "^1.8.1"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8.16.0",
    "git": ">=2.18.0"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.9.0",
    "@testing-library/react": "^15.0.4",
    "@types/react-dom": "^18.2.25",
    "@types/react": "^18.2.79",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "options": {
          "useTabs": false
        }
      },
      {
        "files": [
          "**/*.mdx"
        ],
        "options": {
          "proseWrap": "preserve",
          "htmlWhitespaceSensitivity": "ignore"
        }
      }
    ]
  },
  "prettierIgnore": [
    "node_modules",
    "**/build/**",
    "**/public/build/**",
    ".env",
    "**/package.json",
    "**/tsconfig.json",
    "**/package-lock.json",
    "**/playwright-report/**"
  ]
}
